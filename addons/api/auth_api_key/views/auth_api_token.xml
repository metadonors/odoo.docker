<odoo>

    <record model="ir.ui.view" id="auth_api_token_form_view">
        <field name="name">auth.api.token.form (in auth_api_key)</field>
        <field name="model">auth.api.token</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="user_id"/>
                        <field name="token"/>
                    </group>
                </sheet>
                <div class="oe_chatter"></div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="auth_api_token_search_view">
        <field name="name">auth.api.token.search (in auth_api_key)</field>
        <field name="model">auth.api.token</field>
        <field name="arch" type="xml">
            <search>
                <field name="user_id"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="auth_api_token_tree_view">
        <field name="name">auth.api.token.tree (in auth_api_key)</field>
        <field name="model">auth.api.token</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user_id"/>
                <field name="token"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="auth_api_token_act_window">
        <field name="name">Api Key</field> 
        <field name="res_model">auth.api.token</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="auth_api_token_menu">
        <field name="name">Api Key</field>
        <field name="parent_id" ref="base.menu_custom"/>
        <field name="action" ref="auth_api_token_act_window"/>
        <field name="sequence" eval="100"/>
    </record>

</odoo>
